<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Text Styles -->
    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textPrimary</item>
    </style>
    
    <style name="Text.Body">
        <item name="android:textSize">@dimen/text_md</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>
    
    <style name="Text.BodySecondary">
        <item name="android:textSize">@dimen/text_sm</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>
    
    <style name="Text.Caption">
        <item name="android:textSize">@dimen/text_xs</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>
    
    <style name="Text.Heading1">
        <item name="android:textSize">@dimen/text_xxxl</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Text.Heading2">
        <item name="android:textSize">@dimen/text_xxl</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Text.Heading3">
        <item name="android:textSize">@dimen/text_lg</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/buttonTextPrimary</item>
        <item name="backgroundTint">@color/buttonPrimary</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>
    
    <style name="Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>
    
    <style name="Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>
    
    <!-- CardView Style -->
    <style name="CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/cardBackground</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>
    
    <!-- Chip Base Style -->
    <style name="Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/backgroundCard</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="chipStrokeColor">@color/colorPrimary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="checkedIconVisible">false</item>
    </style>
    
    <!-- Chip Filter Style -->
    <style name="Chip.Filter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/backgroundCard</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="chipStrokeColor">@color/colorPrimary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="checkedIconVisible">false</item>
    </style>
    
    <!-- Rounded Image View Style -->
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <!-- RatingBar Style -->
    <style name="RatingBarStyle" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/border</item>
        <item name="colorControlActivated">@color/ratingYellow</item>
    </style>
    
</resources>
