<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    app:strokeWidth="0dp"
    android:backgroundTint="#00000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/bg_promotion_banner"
        android:gravity="center_vertical">

        <!-- Icon with tag -->
        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp">
            
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_promotion_icon"/>
            
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_promotion"
                app:tint="@color/primaryColor"/>
                
        </FrameLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPromotionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khuyến mãi tháng 11"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvPromotionDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Giảm 20% cho tất cả các vé"
                android:textSize="13sp"
                android:textColor="@color/textSecondary"
                android:maxLines="1"
                android:ellipsize="end"/>

        </LinearLayout>

        <!-- Discount Badge -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="8dp">
            
            <TextView
                android:id="@+id/tvPromotionDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20% OFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="@drawable/bg_discount_badge"/>
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Xem ngay"
                android:textSize="11sp"
                android:textColor="@color/primaryColor"
                android:textStyle="bold"/>
                
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
