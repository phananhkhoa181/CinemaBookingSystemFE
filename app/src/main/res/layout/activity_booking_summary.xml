<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundCard"
        android:fitsSystemWindows="true"
        app:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:paddingTop="16dp"
            app:title="Thanh toán"
            app:titleTextColor="@color/textPrimary"
            app:titleCentered="false"
            app:titleMarginStart="0dp"
            app:navigationIcon="@drawable/ic_back"
            app:navigationIconTint="@color/textPrimary" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="200dp">

            <!-- Movie Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/backgroundCard"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Movie Poster Placeholder -->
                    <FrameLayout
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:background="@drawable/bg_card">

                        <ImageView
                            android:id="@+id/ivMoviePoster"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:contentDescription="Movie poster" />

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_movie"
                            app:tint="@color/textSecondary"
                            android:alpha="0.3" />

                    </FrameLayout>

                    <!-- Movie Details -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvMovieTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MỤC SƯ, THẦY ĐỒNG &amp; CON QUỶ ÂM TRỊ"
                            android:textSize="15sp"
                            android:textColor="@color/textPrimary"
                            android:textStyle="bold"
                            android:maxLines="2"
                            android:ellipsize="end" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tvFormat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2D"
                                android:textSize="12sp"
                                android:textColor="@color/textSecondary" />

                            <TextView
                                android:id="@+id/tvRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="T18"
                                android:textSize="11sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:paddingHorizontal="6dp"
                                android:paddingVertical="2dp"
                                android:background="@drawable/bg_rating_c18"
                                android:gravity="center" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvCinemaName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Cinestar Quốc Thanh (TP.HCM)"
                            android:textSize="12sp"
                            android:textColor="@color/textSecondary" />

                        <TextView
                            android:id="@+id/tvShowtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="03/11/2025 - 23:55 | Phòng: 01"
                            android:textSize="12sp"
                            android:textColor="@color/textSecondary" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Ticket Info Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:text="THÔNG TIN VÉ"
                android:textSize="14sp"
                android:textColor="@color/textSecondary"
                android:textStyle="bold" />

            <!-- Seats Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/backgroundCard"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ghế:"
                            android:textSize="13sp"
                            android:textColor="@color/textSecondary" />

                        <TextView
                            android:id="@+id/tvSeats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="F06"
                            android:textSize="13sp"
                            android:textColor="@color/textPrimary"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="12dp"
                        android:background="@color/border" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Số lượng:"
                            android:textSize="13sp"
                            android:textColor="@color/textSecondary" />

                        <TextView
                            android:id="@+id/tvSeatCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="13sp"
                            android:textColor="@color/textPrimary"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="12dp"
                        android:background="@color/border" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tổng"
                            android:textSize="14sp"
                            android:textColor="@color/textPrimary"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvTicketPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="45,000 đ"
                            android:textSize="14sp"
                            android:textColor="@color/textPrimary"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Combo Section -->
            <TextView
                android:id="@+id/tvComboSectionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:text="THÔNG TIN BẮP NƯỚC"
                android:textSize="14sp"
                android:textColor="@color/textSecondary"
                android:textStyle="bold" />

            <!-- Combos Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCombos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/backgroundCard"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Combo List Container -->
                    <LinearLayout
                        android:id="@+id/layoutComboList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="12dp"
                        android:background="@color/border" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tổng"
                            android:textSize="14sp"
                            android:textColor="@color/textPrimary"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvComboPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="259,000 đ"
                            android:textSize="14sp"
                            android:textColor="@color/textPrimary"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Voucher Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/backgroundCard"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <EditText
                            android:id="@+id/etVoucherCode"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:hint="Mã khuyến mãi"
                            android:textColorHint="@color/textHint"
                            android:textColor="@color/textPrimary"
                            android:textSize="14sp"
                            android:paddingHorizontal="12dp"
                            android:background="@drawable/bg_edit_text"
                            android:inputType="textCapCharacters"
                            android:maxLines="1" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnApplyVoucher"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_marginStart="8dp"
                            android:text="ÁP DỤNG"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/colorPrimary"
                            app:cornerRadius="8dp"
                            style="@style/Widget.Material3.Button" />

                    </LinearLayout>

                    <!-- Applied Voucher Display (hidden by default) -->
                    <LinearLayout
                        android:id="@+id/layoutAppliedVoucher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:background="@drawable/bg_voucher_applied"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_voucher"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/tvVoucherName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Giảm 10%"
                            android:textSize="13sp"
                            android:textColor="@color/textPrimary"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/btnRemoveVoucher"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_close_clear_cancel"
                            app:tint="@color/textSecondary"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="2dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Payment Method Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:text="PHƯƠNG THỨC THANH TOÁN"
                android:textSize="14sp"
                android:textColor="@color/textSecondary"
                android:textStyle="bold" />

            <!-- VNPay Payment Method -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardVNPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/backgroundCard"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="24dp"
                        android:src="@drawable/vnpayicon"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="VNPay - Cổng thanh toán"
                        android:textSize="14sp"
                        android:textColor="@color/textPrimary"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/rbVNPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:clickable="false"
                        android:padding="4dp"
                        android:buttonTint="@color/colorPrimary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Payment Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@color/backgroundCard"
        android:elevation="8dp"
        android:padding="16dp">

        <!-- Total Amount Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <!-- Subtotal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tổng cộng"
                    android:textSize="13sp"
                    android:textColor="@color/textSecondary" />

                <TextView
                    android:id="@+id/tvSubtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="304,000 đ"
                    android:textSize="13sp"
                    android:textColor="@color/textSecondary" />

            </LinearLayout>

            <!-- Discount (always visible) -->
            <LinearLayout
                android:id="@+id/layoutDiscount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Giảm giá"
                    android:textSize="13sp"
                    android:textColor="@color/textSecondary" />

                <TextView
                    android:id="@+id/tvDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 đ"
                    android:textSize="13sp"
                    android:textColor="@color/textSecondary" />

            </LinearLayout>

            <!-- Final Total -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Còn lại"
                    android:textSize="16sp"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="304,000 đ"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- Cancel Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelBooking"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Hủy đặt vé"
                android:textSize="14sp"
                android:textStyle="normal"
                android:textColor="@color/white"
                android:backgroundTint="@android:color/transparent"
                app:strokeColor="@color/white"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <!-- Payment Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPayment"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="THANH TOÁN"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorPrimary"
                app:cornerRadius="8dp"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
