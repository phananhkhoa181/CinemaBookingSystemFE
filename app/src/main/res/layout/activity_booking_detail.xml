<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="40dp">

        <!-- White Card Container -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Movie Info Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Movie Poster -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivMoviePoster"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/RoundedImageView"
                        tools:src="@drawable/ic_empty_bookings"/>

                    <!-- Movie Details -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <!-- Movie Title -->
                        <TextView
                            android:id="@+id/tvMovieTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Avengers: Endgame"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:maxLines="2"
                            android:ellipsize="end"/>

                        <!-- Format + Age Rating -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvFormat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2D - SUB"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/tvAgeRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="C18"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:paddingHorizontal="6dp"
                                android:paddingVertical="2dp"
                                android:background="@drawable/bg_age_rating_c18"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- Cinema & Showtime Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <!-- Cinema Name -->
                    <TextView
                        android:id="@+id/tvCinemaName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CGV Vincom Center"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <!-- Showtime -->
                    <TextView
                        android:id="@+id/tvShowtime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Suất 15:30 - Chủ Nhật, 26/10/2025"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"/>

                </LinearLayout>

                <!-- QR Code -->
                <ImageView
                    android:id="@+id/ivQRCode"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:scaleType="fitCenter"
                    tools:src="@drawable/ic_empty_bookings"/>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="16dp"/>

                <!-- Seats Info -->
                <TextView
                    android:id="@+id/tvSeatsLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ghế - HNO"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <!-- Ticket Details Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <!-- Column 1: Mã vé -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mã vé"
                            android:textColor="#666666"
                            android:textSize="13sp"/>

                        <TextView
                            android:id="@+id/tvBookingCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="176227002635991"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <!-- Column 2: Stars -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stars"
                            android:textColor="#666666"
                            android:textSize="13sp"/>

                        <TextView
                            android:id="@+id/tvStars"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="7"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <!-- Column 3: Tổng Cộng -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tổng Cộng"
                            android:textColor="#666666"
                            android:textSize="13sp"/>

                        <TextView
                            android:id="@+id/tvTotalPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="220,000đ"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Close Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClose"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            android:text="ĐÓNG"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/colorPrimary"
            app:cornerRadius="8dp"/>

    </LinearLayout>

</ScrollView>
