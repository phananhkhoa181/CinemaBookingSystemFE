<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".ui.booking.SelectSeatActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        android:fitsSystemWindows="true"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Chọn ghế"
            app:titleTextColor="@color/textPrimary"
            app:navigationIcon="@drawable/ic_back"
            app:navigationIconTint="@color/textPrimary" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Movie Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_md"
                app:cardBackgroundColor="@color/cardBackground"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:strokeColor="@color/border"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <TextView
                        android:id="@+id/tvMovieTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phá Đám: Sinh Nhật Mẹ"
                        android:textSize="16sp"
                        android:textColor="@color/textPrimary"
                        android:textStyle="bold" />

                    <!-- Format and Rating Row -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvShowtimeInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2D PHỤ ĐỀ"
                            android:textSize="12sp"
                            android:textColor="@color/textSecondary" />

                        <!-- Rating Badge -->
                        <TextView
                            android:id="@+id/tvRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="C13"
                            android:textSize="11sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="2dp"
                            android:background="@drawable/bg_rating_badge"
                            android:gravity="center" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvShowtimeDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="30/10/2025 - 16:00"
                        android:textSize="12sp"
                        android:textColor="@color/textSecondary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Screen Label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_md"
                android:layout_marginTop="@dimen/spacing_lg"
                android:text="MÀN HÌNH"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:background="@drawable/bg_screen"
                android:paddingVertical="@dimen/spacing_sm" />

            <!-- Seat Map Container -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md">

                <!-- Seat Map (RecyclerView) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSeatMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:clipToPadding="false"
                    android:paddingHorizontal="@dimen/spacing_md"
                    tools:listitem="@layout/item_seat_row" />

            </FrameLayout>

            <!-- Legend -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/spacing_lg"
                android:padding="@dimen/spacing_md">

                <include layout="@layout/legend_seat_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Summary -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="@color/cardBackground"
        android:elevation="8dp"
        android:padding="@dimen/spacing_md"
        android:gravity="center_vertical">

        <!-- Seat Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSeatCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5x ghế: C9, C6, B7, J8:J7"
                android:textSize="14sp"
                android:textColor="@color/textPrimary"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvTotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng Cộng: 665,000đ"
                android:textSize="12sp"
                android:textColor="@color/textSecondary"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Continue Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:text="Tiếp tục"
            android:textSize="16sp"
            android:paddingHorizontal="32dp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button_continue"
            app:backgroundTint="@null"
            app:cornerRadius="@dimen/button_corner_radius"
            android:enabled="false" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
