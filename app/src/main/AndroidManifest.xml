<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CinemaBookingSystemFE"
        android:usesCleartextTraffic="true">
        
        <!-- Splash Activity (LAUNCHER) - First screen -->
        <activity
            android:name=".ui.auth.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.CinemaBookingSystemFE">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Login Activity - Show when user needs to login -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.CinemaBookingSystemFE" />
        
        <!-- Main Activity - After login -->
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.CinemaBookingSystemFE" />
        
        <!-- Authentication Activities -->
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.CinemaBookingSystemFE" />
        
        <activity
            android:name=".ui.auth.ForgotPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.CinemaBookingSystemFE" />
        
        <activity
            android:name=".ui.auth.VerifyEmailActivity"
            android:exported="false"
            android:theme="@style/Theme.CinemaBookingSystemFE" />
        
        <activity
            android:name=".ui.auth.ResetPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.CinemaBookingSystemFE" />
        
        <!-- Booking Flow Activities -->
        <activity
            android:name=".ui.booking.SelectCinemaActivity"
            android:exported="false"
            android:theme="@style/Theme.CinemaBookingSystemFE" />
        
        <activity
            android:name=".ui.booking.SelectSeatActivity"
            android:exported="false"
            android:theme="@style/Theme.CinemaBookingSystemFE" />
        
        <activity
            android:name=".ui.booking.SelectComboActivity"
            android:exported="false"
            android:theme="@style/Theme.CinemaBookingSystemFE" />
        
        <activity
            android:name=".ui.booking.BookingDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.CinemaBookingSystemFE" />
        
        <!-- Payment Activities -->
        <activity
            android:name=".ui.payment.BookingSummaryActivity"
            android:exported="false"
            android:theme="@style/Theme.CinemaBookingSystemFE" />
        
        <!-- Payment Result Activity with Deep Link -->
        <activity
            android:name=".ui.payment.PaymentResultActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CinemaBookingSystemFE">
            
            <!-- Deep Link for VNPay callback -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                
                <!-- Deep link scheme: movieapp://payment/result -->
                <data
                    android:scheme="movieapp"
                    android:host="payment"
                    android:pathPrefix="/result" />
            </intent-filter>
        </activity>
        
        <!-- Movie Detail Activities -->
        <activity
            android:name=".ui.moviedetail.SearchMovieActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        
        <activity
            android:name=".ui.moviedetail.MovieDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        
        <activity
            android:name=".ui.moviedetail.MovieTrailerActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        
        <!-- Profile Activities -->
        <activity
            android:name=".ui.profile.EditProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.CinemaBookingSystemFE" />
        
        <!-- TODO: Thêm các Activities khác khi implement -->
        <!-- ProfileEditActivity, etc. -->
        
    </application>

</manifest>